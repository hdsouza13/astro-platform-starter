---
// src/layouts/Layout.astro
const { title } = Astro.props;
---

<html>
    <head>
        <title>{title}</title>
    </head>
    <body>
        <header>
            <h1>My Astro Blog</h1>
            <nav>
                <a href="/">Home</a> |
                <a href="/about">About</a>
            </nav>
        </header>
        <main>
            <h2>Hugo D Souza</h2>
            <slot />
        </main>
        <footer>
            <p>&copy; 2025 My Astro Blog</p>
        </footer>
    </body>
</html>

<style>
    h1 {
        text-align: center;
    }
    h2 {
        text-align: center;
    }
    nav {
        text-align: center;
        margin: 20px 0;
    }
    nav a {
        margin: 0 10px;
        text-decoration: none;
        color: #333;
    }
    nav a:hover {
        text-decoration: underline;
    }
</style>
